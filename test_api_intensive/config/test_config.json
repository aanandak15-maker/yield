    "max_response_time_under_load_ms": 10000,
    "max_variety_selection_time_ms": 100,
    "concurrent_users": [1, 10, 50, 100],
    "load_test_duration_seconds": 60,
    "ramp_up_time_seconds": 30,
    "stress_test_max_users": 200,
    "spike_test_users": 150,
    "spike_duration_seconds": 10
  },
  "thresholds": {
    "min_confidence_score": 0.7,
    "min_yield_tons_per_hectare": 1.0,
    "max_yield_tons_per_hectare": 10.0,
    "max_error_rate_percent": 5.0,
    "min_success_rate_percent": 95.0,
    "max_p95_response_time_ms": 7000,
    "max_p99_response_time_ms": 10000,
    "min_throughput_requests_per_second": 10
  },
  "test_parameters": {
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_delay_seconds": 1,
    "max_retries_on_failure": 2,
    "parallel_execution": true,
    "max_workers": 4,
    "fail_fast": false,
    "verbose_logging": true,
    "capture_screenshots": false,
    "save_response_data": true
  },
  "validation": {
    "invalid_crop_types": [
      "rice",
      "wheat",
      "maize",
      "RICE",
      "Ric",
      "Barley",
      "Soybean",
      "",
      "123",
      "Rice123"
    ],
    "invalid_coordinates": {
      "out_of_range_lat": [91.0, -91.0, 100.0, -100.0],
      "out_of_range_lon": [181.0, -181.0, 200.0, -200.0],
      "non_numeric": ["abc", "null", "undefined", "NaN"],
      "boundary_values": {
        "min_lat": -90.0,
        "max_lat": 90.0,
        "min_lon": -180.0,
        "max_lon": 180.0
      }
    },
    "invalid_dates": {
      "future_dates": ["2026-01-01", "2025-12-31"],
      "wrong_formats": ["01-01-2024", "2024/01/01", "Jan 1 2024", "20240101"],
      "too_old": ["2020-01-01", "2019-06-15"],
      "invalid_dates": ["2024-13-01", "2024-02-30", "2024-00-01"]
    },
    "edge_cases": {
      "min_polygon_points": 3,
      "max_string_length": 10000,
      "special_characters": ["<script>", "'; DROP TABLE--", "../../../etc/passwd", "${jndi:ldap://}"]
    }
  },
  "security": {
    "sql_injection_payloads": [
      "' OR '1'='1",
      "'; DROP TABLE varieties--",
      "1' UNION SELECT NULL--",
      "admin'--",
      "' OR 1=1--"
    ],
    "xss_payloads": [
      "<script>alert('XSS')</script>",
      "<img src=x onerror=alert('XSS')>",
      "javascript:alert('XSS')",
      "<svg onload=alert('XSS')>"
    ],
    "path_traversal_payloads": [
      "../../../etc/passwd",
      "..\\..\\..\\windows\\system32\\config\\sam",
      "....//....//....//etc/passwd"
    ],
    "command_injection_payloads": [
      "; ls -la",
      "| cat /etc/passwd",
      "& whoami",
      "`id`",
      "$(whoami)"
    ]
  },
  "integration": {
    "external_services": {
      "google_earth_engine": {
        "enabled": true,
        "mock_on_failure": true,
        "timeout_seconds": 15
      },
      "openweather_api": {
        "enabled": true,
        "mock_on_failure": true,
        "timeout_seconds": 10
      }
    },
    "database": {
      "test_db_path": "test_api_intensive/test_data/test_crop_prediction.db",
      "reset_before_tests": false,
      "backup_before_tests": true
    }
  },
  "reporting": {
    "output_directory": "test_api_intensive/reports",
    "formats": ["html", "json", "markdown"],
    "include_screenshots": false,
    "include_request_response_logs": true,
    "include_performance_charts": true,
    "include_coverage_report": true,
    "archive_old_reports": true,
    "max_archived_reports": 10
  },
  "ci_cd": {
    "enabled": false,
    "run_on_pull_request": true,
    "run_on_push_to_main": true,
    "fail_on_error_rate_above": 5.0,
    "fail_on_performance_regression": true,
    "performance_regression_threshold_percent": 20,
    "notify_on_failure": true,
    "notification_channels": ["email", "slack"]
  },
  "environment": {
    "test_environment": "local",
    "api_key_env_var": "CROP_YIELD_API_KEY",
    "gee_credentials_env_var": "GEE_SERVICE_ACCOUNT_KEY",
    "openweather_key_env_var": "OPENWEATHER_API_KEY",
    "log_level": "INFO",
    "debug_mode": false
